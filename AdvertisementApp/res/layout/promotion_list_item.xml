<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/promotionListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <ImageView
           android:id="@+id/promotionListItem_photo"
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:src="@drawable/image2"
           android:layout_centerVertical="true"
           android:scaleType="fitXY"/>
        <LinearLayout 
           android:layout_width="match_parent"            
           android:layout_height="wrap_content"
           android:id="@+id/promotionListItem_top_column_title_outline"
           android:layout_toRightOf="@id/promotionListItem_photo"
           android:layout_marginLeft="5dp"
           android:layout_marginTop="5dp"
           android:layout_alignBaseline="@id/promotionListItem_photo"
           android:orientation="vertical">
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/promotionListItem_top_column_title"
                 android:textSize="16sp"
                 />
        </LinearLayout>
        
        <LinearLayout 
           android:layout_width="fill_parent"            
           android:layout_height="wrap_content"
           android:id="@+id/promotionListItem_top_column_score_outline"
           android:layout_toRightOf="@id/promotionListItem_photo"
           android:layout_below="@id/promotionListItem_top_column_title_outline"
           android:layout_marginLeft="5dp"
           android:layout_marginTop="3dp"
           android:orientation="horizontal">
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="12sp"
                 android:text="所需积分:"/>
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/promotionListItem_top_column_score"
                 android:layout_marginLeft="3dp"
                 android:textSize="12sp"
                 />             
        </LinearLayout>
        
        
        <LinearLayout
           android:layout_width="match_parent"
		   android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:id="@+id/promotionListItem_bootom_column"
           android:layout_marginLeft="5dp"
           android:layout_toRightOf="@id/promotionListItem_photo"
           android:layout_below="@id/promotionListItem_photo">
 
            
     
           <LinearLayout 
           		android:layout_width="wrap_content"
           		android:layout_height="wrap_content"
           		android:orientation="horizontal"
           		android:layout_weight="1"
           		>
           		<ImageView 
               		android:layout_width="20dp"
               		android:layout_height="20dp"
               		android:scaleType="fitXY"
               		android:layout_gravity="center_vertical"
               		android:src="@drawable/rest_num"/>
           		<TextView 
               		android:layout_width="wrap_content"
               		android:layout_height="wrap_content"
               		android:layout_gravity="center_vertical"
               		android:textSize="10sp"
               		android:text="剩余数量: "/>
           		<TextView 
               		android:layout_width="wrap_content"
               		android:layout_height="wrap_content"
               		android:id="@+id/promotionListItem_bootom_column_restnum"
               		android:layout_gravity="center_vertical"
               		android:textSize="10sp"
               		/>            
        	</LinearLayout> 

           
           
           
           
            <LinearLayout 
           		android:layout_width="wrap_content"
           		android:layout_height="wrap_content"
           		android:orientation="horizontal"
           		android:layout_weight="1"
           		>
           		<ImageView 
               		android:layout_width="20dp"
               		android:layout_height="20dp"
               		android:scaleType="fitXY"
               	    android:layout_gravity="center_vertical"
               		android:src="@drawable/rest_num"/>
           		<TextView 
               		android:layout_width="wrap_content"
               		android:layout_height="wrap_content"
               	    android:layout_gravity="center_vertical"
               		android:textSize="10sp"
               		android:text="剩余"/>
           		<TextView 
               		android:layout_width="wrap_content"
               		android:layout_height="wrap_content"
               		android:id="@+id/promotionListItem_bootom_column_restday"
               		android:layout_gravity="center_vertical"
               		android:textSize="10sp"
               		/>
           		<TextView 
               		android:layout_width="wrap_content"
               		android:layout_height="wrap_content"
               		android:layout_gravity="center_vertical"
               		android:textSize="10sp"
               		android:text="天"/>            
        	</LinearLayout> 
        	
            
            
            
            
            <LinearLayout 
           		android:layout_width="wrap_content"
           		android:layout_height="wrap_content"
           		android:orientation="horizontal"
           		android:layout_weight="1"
           		>
           		<ImageView 
               		android:layout_width="20dp"
               		android:layout_height="20dp"
               		android:scaleType="fitXY"
               	    android:layout_gravity="center_vertical"
               		android:src="@drawable/rest_num"/>
           		<TextView 
               		android:layout_width="wrap_content"
               		android:layout_height="wrap_content"
               		android:id="@+id/promotionListItem_bootom_column_location"
               	    android:layout_gravity="center_vertical"
               		android:textSize="10sp"
               		/>
        	</LinearLayout>        
        </LinearLayout>
        
        <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next_item"/>
        
        
        
        
    </RelativeLayout>
</LinearLayout>    
